{
  "name": "weather-service",
  "version": "1.0.0",
  "description": "Weather Service for Agro-Alertas",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test:all": "npm --prefix microservices/services/user-service test && npm --prefix microservices/services/alert-service test && npm --prefix microservices/services/weather-service test && npm --prefix microservices/services/notification-service test && npm --prefix microservices/services/preference-service test && npm --prefix microservices/services/log-service test && npm --prefix microservices/gateway/api-gateway test",
    "test": "jest --config jest.config.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/microservices": "^11.1.6",
    "@nestjs/typeorm": "^11.0.0",
    "@types/jest": "^30.0.0",
    "agro-alertas-microservices": "file:../../..",
    "axios": "^1.12.2",
    "jest": "^30.2.0",
    "json2csv": "^6.0.0-alpha.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "ts-jest": "^29.4.5",
    "typeorm": "^0.3.27",
    "winston": "^3.18.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.1.7",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.11.10",
    "@types/winston": "^2.4.4",
    "typescript": "4.9.5"
  }
}
